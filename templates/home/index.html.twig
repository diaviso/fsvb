        <div class="row">
          <div class="col-lg-12 col-xl-12 stretch-card">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
             {% for role in app.user.roles %}   
             {% if role == 'ROLE_ADMIN' %}
            <div class="card">
                <div class="card-header">
                    <h3>LISTE DES LIGUES</h3>
                    <button type="button" class="btn btn-primary float-end mt-n3" data-bs-toggle="modal" data-bs-target="#exampleModal">
                      Ajouter une ligue
                    </button>
                </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table id="dataTableExample" class="table">
                    <thead>
                      <tr>
                        <th>Logo</th>
                        <th>Nom</th>
                        <th>Président</th>
                        <th>Action</th>
                      </tr>
                    </thead>
                    <tbody>
                        {% for ligue in ligues %}
                        <tr>
                            <td><img src="{{ asset('uploads/logos/' ~ ligue.logo) }}" alt="{{ ligue.nom }}" width="35"/></td>
                            <td>{{ ligue.nom }}</td>
                            <td>{{ ligue.president }}</td>
                            <td>
                                <a href="{{ path('app_ligue_show', {'id':ligue.id}) }}" title="Consulter"><button class="btn btn-outline-success"><i data-feather="folder"></i></button></a>
                                <a href="{{ path('app_ligue_edit', {'id':ligue.id}) }}" title="Modifier"><button class="btn btn-outline-primary" title="Modifier la ligue"> <i data-feather="edit"></i></button></a>
                                {{ include('ligue/_delete_form.html.twig') }}
                                       
                            </td>
                        </tr>
                        {% endfor %}
                    
                     
                    </tbody>
                  </table>
                </div>
                
              </div> 
            </div>
            {% endif %}
            {% endfor %}
            {% endif %}
          </div>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
          <div class="modal-dialog">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">AJOUT D'UNE NOUVELLE LIGUE</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="btn-close"></button>
              </div>
              <div class="modal-body">
                  {{ include('ligue/_form.html.twig') }}
              </div>
              <div class="modal-footer">

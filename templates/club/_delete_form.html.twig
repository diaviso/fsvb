<form method="post" style="display:inline;" action="{{ path('app_club_delete', {'id': club.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ club.id) }}">
    <button class="btn btn-outline-danger" title="supprimer"><span data-feather="trash"></span></button>
</form>
